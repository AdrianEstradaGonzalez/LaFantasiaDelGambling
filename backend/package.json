{
  "name": "auth-backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "postinstall": "prisma generate",
    "start": "node --es-module-specifier-resolution=node dist/index.js",
    "deploy": "prisma db push --accept-data-loss --skip-generate && npm run build",
    "evaluate-bets": "tsx src/workers/evaluate-all-bets.ts",
    "prisma:migrate": "prisma migrate deploy || prisma migrate dev --name init && prisma generate",
    "prisma:deploy": "prisma migrate deploy && prisma generate",
    "prisma:push": "prisma db push --accept-data-loss && prisma generate",
    "sync-players": "tsx src/scripts/sync-players.ts",
    "load-stats": "tsx scripts/load-all-player-stats.ts",
    "load-premier-stats": "tsx scripts/load-all-premier-stats.ts",
    "update-rankings": "tsx scripts/update-live-rankings.ts",
    "full-backup": "tsx scripts/full-database-backup.ts",
    "clean-all-data": "tsx scripts/clean-all-data.ts",
    "restore-backup": "tsx scripts/restore-from-backup.ts",
    "calculate-all-points": "tsx scripts/calculate-all-player-points.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^9.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^5.22.0",
    "@types/jsonwebtoken": "^9.0.10",
    "argon2": "^0.40.3",
    "axios": "^1.13.1",
    "fastify": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.7",
    "pino-pretty": "^13.1.1",
    "stripe": "^19.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.21",
    "@types/nodemailer": "^7.0.2",
    "prisma": "^5.18.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}
